<openerp>
<data>

<record id="partner_form" model="ir.ui.view">
    <field name="name">Check contact VAT</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="partner_contact_vat.partner_form"/>
    <field name="arch" type="xml">
        <data>
            <!-- Accounting page -->
            <xpath expr="//div[@name='contact_vat_accounting']"
                   position="replace">
                <div name="contact_vat_accounting">
                    <field
                        name="contact_vat"
                        placeholder="e.g. BE0477472701"
                        class="oe_inline"/>
                    <button
                        colspan="2"
                        name="button_check_contact_vat"
                        string="Check Validity"
                        type="object"
                        icon="gtk-execute"
                        class="oe_inline"/>
                </div>
            </xpath>

            <!-- Contacts subform -->
            <xpath expr="//div[@name='contact_vat_subform']"
                   position="replace">
                <div name="contact_vat_subform">
                    <field
                        name="contact_vat"
                        placeholder="e.g. BE0477472701"
                        class="oe_inline"/>
                    <button
                        colspan="2"
                        name="button_check_contact_vat"
                        string="Check Validity"
                        type="object"
                        icon="gtk-execute"
                        class="oe_inline"/>
                </div>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
