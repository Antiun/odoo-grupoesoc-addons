<openerp>
<data>

<!-- Views -->
<record id="training_type_tree" model="ir.ui.view">
    <field name="name">Training type tree</field>
    <field name="model">training.training_type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="expected_hour_type_ids" widget="many2many_tags"/>
        </tree>
    </field>
</record>

<record id="training_type_form" model="ir.ui.view">
    <field name="name">Training type form</field>
    <field name="model">training.training_type</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="expected_hour_type_ids" widget="many2many_tags"/>
            </group>
        </form>
    </field>
</record>

<record id="training_type_search" model="ir.ui.view">
    <field name="name">Training type search</field>
    <field name="model">training.training_type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="expected_hour_type_ids"/>
        </search>
    </field>
</record>

<!-- Actions -->
<record id="open_training_types_view" model="ir.actions.act_window">
    <field name="name">Open training types view</field>
    <field name="res_model">training.training_type</field>
    <field name="view_mode">tree</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new training type.
        </p>
        <p>
            A training type defines what is to be expected for training
            actions of that type.
        </p>
        <p>
            For example, they define what type of hours that training action
            should have.
        </p>
    </field>
</record>

<!-- Menus -->
<menuitem id="training_types_menu"
          parent="configuration_menu"
          name="Training types"
          action="open_training_types_view"/>

</data>
</openerp>
