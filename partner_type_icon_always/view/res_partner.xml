<openerp>
<data>

<record id="partner_form" model="ir.ui.view">
    <field name="name">Always show partner type icon</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <data version="7.0">
            <xpath expr="//field[@name='image']" position="replace">
                <div class="oe_left oe_form_field_image"
                     style="margin-right:5px">
                    <!-- Partner avatar -->
                    <field name="image"
                           widget="image"
                           class="oe_left oe_avatar"
                           options="{'preview_image': 'image_medium',
                                     'size': [90, 90]}"/>

                    <!-- Company icon -->
                    <span attrs="{'invisible': [('is_company', '=', False)]}"
                          class="oe_form_group oe_left oe_avatar">
                        <img src="/base/static/src/img/company_image.png"/>
                    </span>

                    <!-- Contact icon -->
                    <span attrs="{'invisible': [('is_company', '=', True)]}"
                          class="oe_form_group oe_left oe_avatar">
                        <img src="/base/static/src/img/avatar.png"/>
                    </span>
                </div>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
