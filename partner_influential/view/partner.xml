<openerp>
<data>

<!-- Add field to partners view -->
<record id="view_res_partner_influential" model="ir.ui.view">
    <field name="name">res.partner.form.partner_influential</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="priority">19</field>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='section_id']" position="after">
            <field name="influential_id" />
        </xpath>
    </field>
</record>

<!-- Add field to search box -->
<record id="view_res_partner_filter_influential" model="ir.ui.view">
    <field name="name">res.partner.filter.partner_influential</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_res_partner_filter"/>
    <field name="priority">19</field>
    <field name="arch" type="xml">
        <!-- Group by partner influential -->
        <xpath expr="//group[@string='Group By']/filter[@string='Salesperson']"
               position="after">
            <filter string="Influential"
                    context="{'group_by': 'influential_id'}"/>
        </xpath>
    </field>
</record>

</data>
</openerp>
